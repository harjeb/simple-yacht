rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 临时测试规则 - 允许所有已认证用户的操作
    match /users/{userId} {
      allow read, write, list: if request.auth != null;
    }
    
    match /leaderboards/{leaderboardId}/scores/{scoreId} {
      allow read, write: if request.auth != null;  // 至少需要认证
    }

  }
}